<h1>Movies</h1>

<div class="container text-center">

    <div class="row justify-content-center">
        {{#each allMovies}}

        <div class="mb-4 col-12 col-md-6 col-lg-3 d-flex align-items-stretch">
            <div class="card">
                <img src="{{image}}" alt="movie image">

                <p>{{title}}</p>

                <a href="/movie/{{_id}}">See more</a>

                <hr>

            </div>

        </div>
        {{/each}}
    </div>

</div>

<a href="/">Go Back</a>